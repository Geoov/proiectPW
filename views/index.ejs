<body>
<div id="top-container" class="d-flex text-center pt-4">
    <div class="w-100 my-auto">
        <h1 class="w-100"> Your current devices: </h1>
        <hr class="fade-hr w-75">
    </div>
</div>
<div id="table-container" class="d-flex py-5">

    <form class="w-100 d-flex justify-content-center">
        <table class="table table-striped table-dark borderless">
            <thead>
            <tr class="text-center">
                <th scope="col">MAC</th>
                <th scope="col">IP</th>
                <th scope="col">Operating System</th>
                <th scope="col">Device</th>
                <th scope="col">UsedWiFi</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>
            <tbody>
            <% if (data != "") {
                    for(let i in data)
            { %>
                <tr class="text-center">
                    <td><%- data[i]["MAC"] -%></td>
                    <td><%- data[i]["IP"] -%></td>
                    <td><%- data[i]["OS"] -%></td>
                    <td><%- data[i]["device_type"] -%></td>
                    <td><%- data[i]["SSID"] -%></td>
                    <td><a class="btn btn-small btn-danger text-center"
                           href="/remove-device?MAC=<%- data[i]["MAC"] -%>&_method=DELETE">Delete</a></td>
                </tr>
            <% }
            } %>
            </tbody>
        </table>
    </form>

</div>
</body>