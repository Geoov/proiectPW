<body>
    <div id="top-container" class="d-flex text-center pt-4">
        <div class="w-100 my-auto">
            <h1 class="w-100"> Add a new device: </h1>
            <hr class="fade-hr w-75">
        </div>
    </div>
    <div id="table-container" class="d-flex flex-column py-5">

        <form class="w-100 d-flex flex-column align-items-center mt-5" method="POST">

            <table class="table table-striped table-dark borderless">
                <thead>
                    <tr class="text-center">
                        <th scope="col">MAC</th>
                        <th scope="col">IP</th>
                        <th scope="col">Device</th>
                        <th scope="col">Operating System</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="form-group">
                        <td>
                            <input class="form-control" name="deviceMAC" placeholder="Enter MAC" type="text" pattern="^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$" required>
                        </td>

                        <td>
                            <input class="form-control" name="deviceIP" placeholder="Enter IP" type="text" pattern="^[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}.[0-9]{1,3}$" required>
                        </td>

                        <td>

                            <select class="form-control" name="deviceType" required>
                                <option>Computer</option>
                                <option>Printer</option>
                                <option>Laptop</option>
                                <option>Smartphone</option>
                            </select>

                        </td>

                        <td>
                            <input class="form-control" name="userOS" placeholder="Enter OS" type="text" pattern="[a-zA-Z]+" required>
                        </td>

                    </tr>
                </tbody>
            </table>

            <div class="btn-container">
                <input type="submit" class="btn btn-small btn-dark d-flex ml-auto mr-4" value="Add device"/>
            </div>

        </form>

            <%if (mesaj != " ") {%>
            <div class="d-flex mt-5 justify-content-center">
                <p><%- mesaj -%></p>
            </div>
            <% } %>
    </div>
</body>